<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptorActivity"
    android:background="@color/colorPrimary">


    <TextView
        android:id="@+id/activityMain_TextView_Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre ingresado:"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/activityMain_TextView_NombreIngresado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activityMain_TextView_Nombre"
        android:layout_alignBottom="@id/activityMain_TextView_Nombre"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
    </TextView>

    <TextView
        android:id="@+id/activityMain_TextView_Apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido ingresado:"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activityMain_TextView_Nombre">
    </TextView>

    <TextView
        android:id="@+id/activityMain_TextView_ApellidoIngresado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activityMain_TextView_Apellido"
        android:layout_alignBottom="@id/activityMain_TextView_Apellido"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
    </TextView>

    <TextView
        android:id="@+id/activityMain_TextView_Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edad ingresada:"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activityMain_TextView_Apellido">
    </TextView>

    <TextView
        android:id="@+id/activityMain_TextView_EdadIngresado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/activityMain_TextView_Edad"
        android:layout_alignBottom="@id/activityMain_TextView_Edad"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
    </TextView>

</RelativeLayout>