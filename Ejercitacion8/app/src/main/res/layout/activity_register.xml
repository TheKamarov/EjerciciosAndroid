<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/activityRegister_EditText_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp">
    </EditText>

    <EditText
        android:id="@+id/activityRegister_EditText_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/activityRegister_EditText_Username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp">
    </EditText>

    <EditText
        android:id="@+id/activityRegister_EditText_ConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_below="@id/activityRegister_EditText_Password"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp">
    </EditText>

    <Button
        android:id="@+id/activityRegister_Button_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/activityRegister_EditText_ConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
    </Button>

</RelativeLayout>