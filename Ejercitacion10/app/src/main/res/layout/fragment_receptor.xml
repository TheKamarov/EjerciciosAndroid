<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ReceptorFragment_TextView_TituloMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENSAJE"
            android:textSize="50sp">
        </TextView>

        <TextView
            android:id="@+id/ReceptorFragment_TextView_Mensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Aca va ir el mesaje que pase el usuario"
            android:textSize="25sp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:id="@+id/ReceptorFragment_TextView_TituloRegalos"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGALOS"
            android:textSize="50sp">
        </TextView>

        <TextView
            android:id="@+id/ReceptorFragment_TextView_Regalos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Aca va ir los regalos que el usuario pase"
            android:textAlignment="center"
            android:textSize="25sp">
        </TextView>

    </LinearLayout>
</FrameLayout>