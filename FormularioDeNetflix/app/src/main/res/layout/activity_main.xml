<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorSecundary">

    <ImageView
        android:id="@+id/activityMain_imageView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"
        >
    </ImageView>

    <EditText
        android:id="@+id/activityMain_editText_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:background="@drawable/edittext_main"
        android:layout_below="@id/activityMain_imageView_titulo">
    </EditText>

    <EditText
        android:id="@+id/activityMain_editText_password"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:background="@drawable/edittext_main"
        android:layout_below="@id/activityMain_editText_email">
    </EditText>

    <Button
        android:id="@+id/activityMain_button_iniciarSesion"
        android:layout_marginTop="15dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/botones_send"
        android:layout_below="@id/activityMain_editText_password"
        android:text="Iniciar sesion"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true">
    </Button>

    <Button
        android:id="@+id/activityMain_button_registrarse"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/botones_send"
        android:layout_below="@id/activityMain_button_iniciarSesion"
        android:layout_marginTop="15dp"
        android:text="Registrarse"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true">
    </Button>

</RelativeLayout>