<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/inicioActivity_relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity"
    android:background="@color/colorSecundary">

    <ImageView
        android:id="@+id/inicioActivity_imageView_icon"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/icon"
        android:layout_marginTop="15dp"
        >
    </ImageView>

    <RelativeLayout
        android:id="@+id/inicioActivity_relativeLayout_barOpcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000">

        <Button
            android:id="@+id/inicioActivity_button_home"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/casahomee">
        </Button>

        <Button
            android:id="@+id/inicioActivity_button_buscar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="35dp"
            android:layout_toRightOf="@id/inicioActivity_button_home"
            android:background="@drawable/iconhomeee">
        </Button>

        <Button
            android:id="@+id/inicioActivity_button_decargas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="35dp"
            android:layout_toRightOf="@id/inicioActivity_button_buscar"
            android:background="@drawable/icondescargarr">
        </Button>

        <Button
            android:id="@+id/inicioActivity_button_mas"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="35dp"
            android:layout_toRightOf="@id/inicioActivity_button_decargas"
            android:background="@drawable/iconmas">
        </Button>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inicioActivity_relativeLayout_central"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/inicioActivity_imageView_icon"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:gravity="center">

        <TextView
            android:id="@+id/inicioActivity_textView_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:id="@+id/inicioActivity_textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="#FFF"
            android:layout_margin="10dp"
            android:layout_below="@id/inicioActivity_textView_email">
        </TextView>

    </RelativeLayout>

</RelativeLayout>