<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/CeldaProducto_ImageView_FotoDelProducto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pc_asus">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/CeldaProducto_ImageView_FotoDelProducto"
        android:background="#000"
        android:alpha="0.7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CeldaProducto_TextView_NombreDelProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            tools:text="Nombre Del Producto"
            android:textColor="#FFF">
        </TextView>

        <TextView
            android:id="@+id/CeldaProducto_TextView_PrecioDelProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            tools:text="$8,000"
            android:textColor="#2AC104">
        </TextView>
    </LinearLayout>

</RelativeLayout>

